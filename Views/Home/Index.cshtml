
@model IEnumerable<newmvccore.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/image/" + (employee.photopath ?? "noimage.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                @* @Html.ActionLink("view", "details", "home", new { id = employee.id })*@
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.id" class="btn btn-primary m-1">View</a>
                @*<a href="@Url.Action("details", "home", new { id = employee.id })" class="btn btn-primary">View</a>*@
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.id" class="btn btn-primary">Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@employee.id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>

